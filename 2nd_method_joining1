# Query showing second method of joining tables together.

With total_amount_paid_cte (total_amount_paid) AS
(SELECT A.customer_id, A.first_name, A.last_name, C.city, D.country, SUM(E.amount) AS "total amount paid"
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
INNER JOIN payment E ON A.customer_id = E.customer_id
WHERE city IN('Aurora',
			  'Citrus Heights',
			  'Iwaki',
			  'Ambattur',
			  'Shanwei',
			  'So Leopoldo',
			  'Teboksary',
			  'Tianjin',
			  'Cianjur')
GROUP BY A.customer_id, first_name, last_name, country, city
ORDER BY "total amount paid" DESC
LIMIT 5)
SELECT AVG("total amount paid")
FROM total_amount_paid_cte
